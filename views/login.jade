extends layout

block content
  h1 Login
  - if (message.length > 0)
    p= message
  form(action="/login" method="post")
    div
      label Username:
      input(type="text" name="username")
    div
      label Password:
      input(type="password" name="password")
    div 
      input(type="submit" value="Log In")
  p 
    | Need an account? Sign up
    a(href="/signup") here.
  p 
    | Return 
    a(href="/") home.
